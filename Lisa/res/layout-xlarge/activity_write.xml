<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/LinearLayout1"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="vertical"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="@dimen/activity_vertical_margin"
      tools:context=".WriteActivity" >


    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <Button
                    android:layout_width="@dimen/activity_write_button_xlarge"
                    android:layout_height="@dimen/activity_write_button_xlarge"
                    android:id="@+id/goAheadLeft"
                    android:layout_column="1"
                    android:text="↖"
                    android:textSize="@dimen/activity_write_textsize"/>

            <Button
                    android:layout_width="@dimen/activity_write_button_xlarge"
                    android:layout_height="@dimen/activity_write_button_xlarge"
                    android:text="↑"
                    android:id="@+id/goAhead"
                    android:layout_column="8"
                    android:textSize="@dimen/activity_write_textsize"
                    android:textStyle="bold"/>

            <Button
                    android:layout_width="@dimen/activity_write_button_xlarge"
                    android:layout_height="@dimen/activity_write_button_xlarge"
                    android:text="↗"
                    android:id="@+id/goAheadRight"
                    android:layout_column="9"
                    android:textSize="@dimen/activity_write_textsize"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <Button
                    android:layout_width="@dimen/activity_write_button_xlarge"
                    android:layout_height="@dimen/activity_write_button_xlarge"
                    android:text="←"
                    android:id="@+id/goLeft"
                    android:layout_column="1"
                    android:textSize="@dimen/activity_write_textsize"
                    android:textStyle="bold"/>

            <Button
                    android:layout_width="@dimen/activity_write_button_xlarge"
                    android:layout_height="@dimen/activity_write_button_xlarge"
                    android:text="→"
                    android:id="@+id/goRight"
                    android:layout_column="9"
                    android:textSize="@dimen/activity_write_textsize"
                    android:textStyle="bold"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <Button
                    android:layout_width="@dimen/activity_write_button_xlarge"
                    android:layout_height="@dimen/activity_write_button_xlarge"
                    android:text="↙"
                    android:id="@+id/goBackLeft"
                    android:layout_column="1"
                    android:singleLine="false"
                    android:textSize="@dimen/activity_write_textsize"/>

            <Button
                    android:layout_width="@dimen/activity_write_button_xlarge"
                    android:layout_height="@dimen/activity_write_button_xlarge"
                    android:text="↓"
                    android:id="@+id/goBack"
                    android:layout_column="8"
                    android:textSize="@dimen/activity_write_textsize"
                    android:textStyle="bold"/>

            <Button
                    android:layout_width="@dimen/activity_write_button_xlarge"
                    android:layout_height="@dimen/activity_write_button_xlarge"
                    android:text="↘"
                    android:id="@+id/goBackRight"
                    android:layout_column="7"
                    android:textSize="@dimen/activity_write_textsize"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <Button
                    android:layout_width="@dimen/activity_write_button_xlarge"
                    android:layout_height="@dimen/activity_write_button_xlarge"
                    android:text="↶"
                    android:id="@+id/turnCCW"
                    android:layout_column="1"
                    android:textSize="@dimen/activity_write_textsize"
                    android:textStyle="bold"/>

            <Button
                    android:layout_width="@dimen/activity_write_button_xlarge"
                    android:layout_height="@dimen/activity_write_button_xlarge"
                    android:text="↷"
                    android:id="@+id/turnCW"
                    android:layout_column="9"
                    android:textSize="@dimen/activity_write_textsize"
                    android:textStyle="bold"/>
        </TableRow>

    </TableLayout>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="4px"
            android:id="@+id/textView2"
            android:background="#000000"
            android:layout_marginTop="10px"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed: 5"
            android:id="@+id/SpeedView"
            android:layout_gravity="center"
            android:textSize="50px"/>

    <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SpeedBar"
            android:layout_gravity="center_vertical|bottom"
            android:layout_column="7"
            />

</LinearLayout>