<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/LinearLayout1"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".TemperatureActivity">

    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <Button
                    android:layout_width="@dimen/activity_write_button_big"
                    android:layout_height="@dimen/activity_write_button"
                    android:text="0:"
                    android:id="@+id/tSensor0"
                    android:layout_column="0"
                    />

            <Button
                    android:layout_width="@dimen/activity_write_button_big"
                    android:layout_height="@dimen/activity_write_button"
                    android:text="1:"
                    android:id="@+id/tSensor1"
                    android:layout_column="1"
                    />
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <Button
                    android:layout_width="@dimen/activity_write_button_big"
                    android:layout_height="@dimen/activity_write_button"
                    android:text="2:"
                    android:id="@+id/tSensor2"
                    android:layout_column="0"
                    />

            <Button
                    android:layout_width="@dimen/activity_write_button_big"
                    android:layout_height="@dimen/activity_write_button"
                    android:text="3:"
                    android:id="@+id/tSensor3"
                    android:layout_column="1"
                    />
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <Button
                    android:layout_width="@dimen/activity_write_button_big"
                    android:layout_height="@dimen/activity_write_button"
                    android:text="4:"
                    android:id="@+id/tSensor4"
                    android:layout_column="0"
                    />

            <Button
                    android:layout_width="@dimen/activity_write_button_big"
                    android:layout_height="@dimen/activity_write_button"
                    android:text="5:"
                    android:id="@+id/tSensor5"
                    android:layout_column="1"
                    />
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <Button
                    android:layout_width="@dimen/activity_write_button_big"
                    android:layout_height="@dimen/activity_write_button"
                    android:text="6:"
                    android:id="@+id/tSensor6"
                    android:layout_column="0"
                    />

            <Button
                    android:layout_width="@dimen/activity_write_button_big"
                    android:layout_height="@dimen/activity_write_button"
                    android:text="7:"
                    android:id="@+id/tSensor7"
                    android:layout_column="1"
                    />
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <Space
                    android:layout_width="@dimen/activity_write_button_big"
                    android:layout_height="60px"
                    android:layout_column="0"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    android:id="@+id/sendThreshold"
                    android:layout_gravity="center_vertical"
                    android:layout_column="0"/>

            <EditText
                    android:layout_width="@dimen/activity_write_button_big"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/textThreshold"
                    android:layout_column="1"
                    android:hint="Threshold"/>

        </TableRow>

    </TableLayout>

</LinearLayout>